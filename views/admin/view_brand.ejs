  <div class="card-datatable table-responsive">
    <table class="datatables-products table">
      <thead class="table-light">
        <tr>
          <th style="font-size: unset;">
            <label class="form-check-label">
              <input class="form-check-input" type="checkbox" id="selectAll" />
            </label>
          </th>
          <th>category name</th>
          <th>subcategory name</th>
          <th>extra category name</th>
          <th>brand name</th>
          <th>status</th>
          <th>actions</th>
        </tr>
      </thead>
      <tbody>
        <% if(brandData != ""){ for(let bData of brandData){ %>
          <tr>
              <td>
                <label class="form-check-label me-2">
                  <input class="form-check-input checkboxSub" type="checkbox" name="mulDelete[]" value="<%= bData.id %>" />
                </label>
              </td>
            <td><%= bData.category.category_name %></td>
            <td><%= bData.subcategory.subcategory_name %></td>
            <td><%= bData.extraCategory.extraCategory_name %></td>
            <td><%= bData.brand_name %></td>
            <td>
              <% if(bData.isActive) { %>
                <a href="/admin/brand/deactiveBrand/?id=<%= bData.id %>">
                  <span class="btn btn-sm btn-primary" text-capitalized="">Active</span>
                </a>
              <% } else { %>
                <a href="/admin/brand/activeBrand/?id=<%= bData.id %>">
                  <span class="btn btn-sm btn-danger" text-capitalized="">Deactive</span>
                </a>
              <% } %>
            </td>
            <td>
              <div class="d-flex align-items-center">
                <a href="/admin/brand/updateBrand/?id=<%= bData.id %>" class="d-inline-block" data-bs-toggle="tooltip" data-bs-title="Edit Brand">
                  <span class="border border-2 rounded-circle p-2">
                    <i class="mdi mdi-pencil"></i>
                  </span>
                </a>
                <a href="/admin/brand/deleteBrand/?id=<%= bData.id %>" class="d-inline-block" data-bs-toggle="tooltip" data-bs-title="Delete Brand">
                  <span class="border border-2 rounded-circle p-2">
                    <i class="mdi mdi-delete"></i>
                  </span>
                </a>
            </td>
          </tr>
        <% } %>
        <tr class="text-center">
          <td colspan="7">
              <% if(pageNo > 0){ %>
                  <a href="?page=<%= pageNo - 1 %>&search=<%= search %>" class="btn btn-primary" style="padding: 10px 16px;" ><</a>
              <% } %>
              <% if(pageNo > 0){ %>
                  <a href="?page=<%= pageNo - 1 %>&search=<%= search %>" class="btn border" style="padding: 10px 16px;" ><%= pageNo %></a>
              <% } %>
              <a href="?page=<%= pageNo %>&search=<%= search %>" class="btn btn-primary" style="padding: 10px 16px;" ><%= pageNo + 1 %></a>
              <% if(totalDocument > pageNo + 1){ %>
                  <a href="?page=<%= pageNo + 1 %>&search=<%= search %>" class="btn border" style="padding: 10px 16px;" ><%= pageNo + 2 %></a>
              <% } %>
              <% if(totalDocument > pageNo + 1){ %>
                  <a href="?page=<%= pageNo + 1 %>&search=<%= search %>" class="btn btn-primary" style="padding: 10px 16px;" >></a>
              <% } %>
          </td>
        </tr>
        <% } else{ %>
          <tr>
            <td colspan="10" class="text-center">
                <h3 class="my-2">Record not found</h3>
            </td>
        </tr>
        <% } %>
